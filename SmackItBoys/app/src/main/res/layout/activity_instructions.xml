<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#6A5ACD"
    tools:context="br.com.isaque.smackitboys.Instructions">
    <TextView
        android:id="@+id/telainstrucao"
        android:textColor="#00BFFF"
        android:layout_marginTop="40dp"
        android:textSize="50dp"
        android:text="Instructions"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#00BFFF"
        android:layout_marginTop="60dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textoinstrucoes"
        android:text="  Click only on the boys to earn points .


    Do not click in the heart you will lose a life .


    You only have only three lives, if you lose all lose the game."
        android:layout_below="@id/telainstrucao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:textSize="50dp"
        android:textColor="#00BFFF"
        android:background="#00FFFFFF"
        android:id="@+id/gotomenu"
        android:text="Menu"
        android:layout_below="@id/textoinstrucoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="220dp"
        android:layout_marginTop="90dp"
        android:textSize="50dp"
        android:textColor="#00BFFF"
        android:background="#00FFFFFF"
        android:id="@+id/gotogame"
        android:text="Play"
        android:layout_below="@id/textoinstrucoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
